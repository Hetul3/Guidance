{
  "manifest_version": 3,
  "name": "WebGuide AI",
  "description": "Base foundation for the WebGuide AI guidance extension.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "WebGuide AI"
  },
  "permissions": ["scripting", "activeTab", "storage", "webNavigation"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.tavily.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/overlay.css",
        "styles/chat.css",
        "styles/highlight.css",
        "overlay.js",
        "dom-snapshot.js",
        "storage.js",
        "llm.js",
        "vendor/marked-lite.js",
        "vendor/dompurify-lite.js",
        "vendor/highlight-lite.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
